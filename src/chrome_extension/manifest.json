{
  "manifest_version": 3,
  "name": "ChatGPT Bridge (Manual, Offscreen)",
  "version": "0.5.0",
  "description": "Manual, user-triggered bridge to VS Code via localhost WebSocket (offscreen keepalive).",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "offscreen", "notifications"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Bridge"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
